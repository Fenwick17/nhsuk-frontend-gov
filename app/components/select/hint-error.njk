{% set html_style = 'background-color: #f0f4f5;' %}
{% set title = 'Select with hint text and error message' %}
{% from 'components/select/macro.njk' import select %}
{% extends 'layout.njk' %}

{% block body %}

  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" id="maincontent">

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          {{ select({
            "id": "select-2",
            "name": "select-2",
            "label": {
              "text": "Label text goes here"
            },
            "hint": {
              "text": "Hint text goes here"
            },
            "errorMessage": {
              "text": "Error message goes here"
            },
            "items": [
              {
                "value": 1,
                "text": "NHS.UK frontend option 1"
              },
              {
                "value": 2,
                "text": "NHS.UK frontend option 2"
              },
              {
                "value": 3,
                "text": "NHS.UK frontend option 3"
              }
            ]
          }) }}
        </div>
      </div>

    </main>
  </div>

{% endblock %}
