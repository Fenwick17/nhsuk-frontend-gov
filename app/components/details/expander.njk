{% set html_style = 'background-color: #f0f4f5;' %}
{% set title = 'Expander' %}
{% from 'components/details/macro.njk' import details %}
{% extends 'layout.njk' %}

{% block body %}

<div class="govuk-width-container">
  <main class="govuk-main-wrapper">

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        {{ details({
          "classes": "nhsuk-expander",
          "text": "Opening times",
          "HTML": "
          <table class='govuk-table'>
            <thead class='govuk-table__head'>
              <tr class='govuk-table__row'>
                <th scope='column' class='govuk-table__header'>Day of the week</th>
                <th scope='column' class='govuk-table__header'>Opening hours</th>
              </tr>
            </thead>
            <tbody class='govuk-table__body'>
              <tr class='govuk-table__row'>
                <th scope='row' class='govuk-table__header'>Monday</th>
                <td class='govuk-table__cell'>9am to 6pm</td>
              </tr>
              <tr class='govuk-table__row'>
                <th scope='row' class='govuk-table__header'>Tuesday</th>
                <td class='govuk-table__cell'>9am to 6pm</td>
              </tr>
              <tr class='govuk-table__row'>
                <th scope='row' class='govuk-table__header'>Wednesday</th>
                <td class='govuk-table__cell'>9am to 6pm</td>
              </tr>
              <tr class='govuk-table__row'>
                <th scope='row' class='govuk-table__header'>Thursday</th>
                <td class='govuk-table__cell'>9am to 6pm</td>
              </tr>
              <tr class='govuk-table__row'>
                <th scope='row' class='govuk-table__header'>Friday</th>
                <td class='govuk-table__cell'>9am to 6pm</td>
              </tr>
              <tr class='govuk-table__row'>
                <th scope='row' class='govuk-table__header'>Saturday</th>
                <td class='govuk-table__cell'>9am to 1pm</td>
              </tr>
              <tr class='govuk-table__row'>
                <th scope='row' class='govuk-table__header'>Sunday</th>
                <td class='govuk-table__cell'>Closed</td>
              </tr>
            </tbody>
          </table>"
        }) }}
      </div>
    </div>

  </main>
</div>

{% endblock %}
