<div class="govuk-back-link{%- if params.classes %} {{ params.classes }}{% endif %}">
  {%- if params.element == 'button' %}
    {% set element='button' %}
  {% else %}
    {% set element='a' %}
  {% endif %}
  <{{element}} class="govuk-back-link__link"
  {%- if element == 'a'%} href="{% if params.href %}{{ params.href }}{% else %}#{% endif %}"{% endif %}
  {%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
  {{ (params.html | safe if params.html else (params.text if params.text else 'Back')) }}</{{element}}>
</div>
