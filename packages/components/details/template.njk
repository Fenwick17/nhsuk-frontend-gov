<details {%- if params.id %} id="{{params.id}}"{% endif %} class="govuk-details
{%- if params.classes %} {{ params.classes }}{% endif %}"
{%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %} {{- " open" if params.open }} data-module="govuk-details">
  <summary class="govuk-details__summary">
    <span class="govuk-details__summary-text">
      {{ params.text }}
    </span>
  </summary>
  <div class="govuk-details__text">
    {{- params.HTML | safe }}
  </div>
</details>
